{% extends "form_div_layout.html.twig" %}

{% block field_rows %}
    <div class="al-form-errors">
        {{ form_errors(form) }}
    </div>
    {% for child in form.children %}
        {{ form_row(child) }}
    {% endfor %}
{% endblock field_rows %}

{% block field_row %}
    <div class="al-form-row">
        {{ form_label(form) }}
        <div class="al-form-field">
            {{ form_widget(form) }}
            <div class="al-form-errors">
                {{ form_errors(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block field_label %}
    {{ block('form_label') }}
    {% if required %}
        <span class="al-form-required" title="This field is required">*</span>
    {% endif %}
{% endblock %}